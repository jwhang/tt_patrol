{
	"manifest_version": 3,
	"name": "TT Patrol",
	"description": "Enforces Travel Tuesday rules",
	"version": "1.2",
	"action": {
  	  "default_icon": "icon.png",
  	  "default_popup": "popup.html"
  	},
	"content_scripts": 
	[
		{
			"matches": ["*://*.messenger.com/*"],
			"js": ["js/content_script.js"],
			"run_at": "document_end"
		}
	],
	"background": {
		"service_worker": "js/background.js"
	},
	"host_permissions": [
		"*://http://172.232.7.65:*/*"
	]
}
